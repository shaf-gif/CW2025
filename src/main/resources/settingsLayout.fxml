<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import java.net.URL?>

<VBox alignment="CENTER" spacing="20" styleClass="rootStyle"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.comp2042.ui.SettingsController">

    <padding>
        <Insets top="50" right="50" bottom="50" left="50"/>
    </padding>

    <Label text="SETTINGS" styleClass="menu"/>

    <VBox spacing="10" alignment="CENTER" prefWidth="250">
        <Button text="CONTROLS" onAction="#showControls" maxWidth="Infinity" styleClass="ipad-dark-grey"/>
        <Button text="BACK TO MENU" onAction="#backToMenu" maxWidth="Infinity" styleClass="ipad-dark-grey"/>
    </VBox>

    <stylesheets>
        <URL value="@window_style.css"/>
    </stylesheets>
</VBox>