<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.TextField?>
<?import java.net.URL?>

<StackPane xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.comp2042.ui.MainMenu"
           styleClass="rootStyle">

    <VBox alignment="CENTER" spacing="20" maxWidth="-Infinity" maxHeight="-Infinity">
        <!-- Padding for the VBox root container -->
        <padding>
            <Insets top="50" right="50" bottom="50" left="50"/>
        </padding>

        <!-- Main Label -->
        <Label text="TETRIS JFX" styleClass="menu"/>

        <!-- VBox containing input fields and buttons -->
        <VBox spacing="10" alignment="CENTER" prefWidth="350">
            <Label text="ENTER PLAYER NAME:" styleClass="nextBrickLabel"/>
            <TextField fx:id="nameField" promptText="Your Name" styleClass="ipad-dark-grey"/>

            <Button fx:id="resumeButton" text="RESUME GAME" onAction="#resumeGame" maxWidth="Infinity" styleClass="ipad-dark-grey" visible="false" managed="false"/>
            <Button text="START GAME" onAction="#startGame" maxWidth="Infinity" styleClass="ipad-dark-grey"/>
            <Button text="LEADERBOARD" onAction="#showLeaderboard" maxWidth="Infinity" styleClass="ipad-dark-grey"/>
            <Button text="SETTINGS" onAction="#showSettings" maxWidth="Infinity" styleClass="ipad-dark-grey"/>
            <Button text="EXIT" onAction="#exitGame" maxWidth="Infinity" styleClass="ipad-dark-grey"/>
        </VBox>
    </VBox>

    <!-- Link the external stylesheet -->
    <stylesheets>
        <URL value="@window_style.css"/>
    </stylesheets>
</StackPane>